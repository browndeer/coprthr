endif


### libstdcl ###
SUBDIRS += ./include ./src/libclelf ./src/libstdcl 


HOST=@host@
HOST_CPU=@host_cpu@
HOST_VENDOR=@host_vendor@
HOST_OS=@host_os@
BUILD=@build@

### clcc ###
ENABLE_CLCC=@ENABLE_CLCC@
ifeq (@host_os@,linux-androideabi)
	ENABLE_CLCC=0
endif
ifeq (@build_cpu@,mic)
	ENABLE_CLCC=0
endif
ifeq ($(ENABLE_CLCC),1)
	SUBDIRS += ./tools/clcc ./tools/clcc1 ./tools/clld ./tools/clnm
endif


